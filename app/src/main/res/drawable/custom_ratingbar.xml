<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unselected stars (background) -->
    <item android:id="@android:id/background"
        android:drawable="@color/unselected_star_color" /> <!-- Define your unselected star color here -->

    <!-- Partially selected stars -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/selected_star_color" /> <!-- Define your selected star color here -->
            </shape>
        </clip>
    </item>

    <!-- Fully selected stars (foreground) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/selected_star_color" /> <!-- Define your selected star color here -->
            </shape>
        </clip>
    </item>
</layer-list>
